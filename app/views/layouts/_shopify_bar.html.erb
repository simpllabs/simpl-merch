<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({
        buttons: {
          primary: {
            label: "Help",
            href: 'http://rocketees.com/help',
            target: 'new'
          },
          secondary: [
            { label: "New Tee", 
              type: "dropdown",
                links: [
                         { label: "Male", href: '/tees/new?gender=male' },
                         { label: "Female", href: "/tees/new?gender=female" } 
                       ]
              },
            { label: "Design Library", href: '/library'},
            { label: "Account",
              type: "dropdown",
              links: [
                       { label: "Profile", href: "/account" },
                       { label: "Orders", href: "/orders" } 
                     ]
            },
          ],
        },
        title: "<%= yield(:title) %>",
        icon: "<%= asset_path('favicon.ico') %>",

      });
    });
  </script>
<% end %>